{% extends 'base.html.twig' %}

{% block title %}Modifier Client{% endblock %}

{% block main %}
    <div class="max-w-lg mx-auto mt-4 p-2 bg-white border border-gray-200 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Modifier Client</h1>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_row(form.surname, {
                    'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'font-medium text-gray-700'}
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.prenom, {
                    'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'font-medium text-gray-700'}
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.telephone, {
                    'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'font-medium text-gray-700'}
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.adresse, {
                    'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'},
                    'label_attr': {'class': 'font-medium text-gray-700'}
                }) }}
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition duration-200">
                Enregistrer
            </button>
        {{ form_end(form) }}

        <a href="{{ path('app_home') }}" class="inline-block mt-4 text-blue-500 hover:underline">Retour Ã  la liste des clients</a>

        {% if app.session.flashBag.has('success') %}
            <div class="mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                {{ app.session.flashBag.get('success')[0] }}
            </div>
        {% endif %}
        
        {% if app.session.flashBag.has('error') %}
            <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                {{ app.session.flashBag.get('error')[0] }}
            </div>
        {% endif %}
    </div>
{% endblock %}
