{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block main %}
    <div class="container mx-auto p-6">
        <h1 class="text-2xl font-bold mb-4">Modifier l'article</h1>
        {{ form_start(formArticle, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_row(formArticle.nom, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full', 'placeholder': 'Nom de l\'article'}}) }}
            </div>
            <div>
                {{ form_row(formArticle.description, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full', 'placeholder': 'Description'}}) }}
            </div>
            <div>
                {{ form_row(formArticle.qteStock, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full', 'placeholder': 'Quantité en stock'}}) }}
            </div>
            <div>
                {{ form_row(formArticle.prix, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full', 'placeholder': 'Prix'}}) }}
            </div>
            <button class="btn btn-primary mt-4 bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600">Mettre à jour</button>
            <button class="btn btn-primary mt-4 bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600">Annuler</button>
        {{ form_end(formArticle) }}
    </div>
{% endblock %}
