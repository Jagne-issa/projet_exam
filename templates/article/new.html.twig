{% extends 'base.html.twig' %}

{% block main %}
<div class="container mx-auto p-4">
    <div class="bg-white shadow-md rounded-lg">
        <div class="bg-gray-200 p-4 rounded-t-lg">
            <h2 class="text-lg font-semibold">Enregistrement d'un article</h2>
        </div>
        <div class="p-4">
            {{ form_start(formArticle) }}

            <div class="mb-4">
                {{ form_label(formArticle.nom, 'Nom de l\'article', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(formArticle.nom, {'attr': {'class': 'border border-gray-300 rounded-md px-3 py-2 w-full'}}) }}
                {{ form_errors(formArticle.nom) }}
            </div>

            <div class="mb-4">
                {{ form_label(formArticle.description, 'Description', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(formArticle.description, {'attr': {'class': 'border border-gray-300 rounded-md px-3 py-2 w-full'}}) }}
                {{ form_errors(formArticle.description) }}
            </div>

            <div class="mb-4">
                {{ form_label(formArticle.qteStock, 'Quantit√© en stock', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(formArticle.qteStock, {'attr': {'class': 'border border-gray-300 rounded-md px-3 py-2 w-full'}}) }}
                {{ form_errors(formArticle.qteStock) }}
            </div>

            <div class="mb-4">
                {{ form_label(formArticle.prix, 'Prix', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(formArticle.prix, {'attr': {'class': 'border border-gray-300 rounded-md px-3 py-2 w-full'}}) }}
                {{ form_errors(formArticle.prix) }}
            </div>

            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Enregistrer</button>
            </div>

            {{ form_end(formArticle) }}
        </div>
    </div>
</div>
{% endblock %}
