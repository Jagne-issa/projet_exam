{% extends 'base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block main %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex">
            <div class="w-3/4 ml-4">
                <header class="bg-gray-800 text-white p-4 mb-6 rounded">
                    <div class="flex justify-between items-center">
                        <div class="text-lg font-bold flex items-center space-x-2">
                            <i class="fas fa-shopping-basket"></i>
                            <span>shop42</span>
                        </div>
                        <div class="flex items-center space-x-2">
                            <i class="fas fa-shield-alt"></i>
                            <span>Gestion des articles sécurisée</span>
                        </div>
                    </div>
                </header>

                <!-- Formulaire pour ajouter un nouvel article -->
                <section class="mb-8">
                    <div class="bg-white shadow rounded p-6">
                        <h2 class="text-xl font-semibold mb-4">Ajouter un nouvel article</h2>
                        {{ form_start(form) }}
                            <div class="mb-4">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.quantity) }}
                                {{ form_widget(form.quantity) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.images) }}
                                {{ form_widget(form.images) }}
                            </div>

                            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
                                Enregistrer l'article
                            </button>
                        {{ form_end(form) }}
                    </div>
                </section>

                <!-- Liste des articles -->
                <section>
                    <h2 class="text-xl font-semibold mb-4">Liste des articles</h2>
                    <table class="min-w-full bg-white border rounded-lg shadow-sm">
                        <thead>
                            <tr class="bg-gray-200 text-gray-700">
                                <th class="py-2 px-4 border-b">Titre</th>
                                <th class="py-2 px-4 border-b">Description</th>
                                <th class="py-2 px-4 border-b">Prix</th>
                                <th class="py-2 px-4 border-b">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for article in articles %}
                                <tr class="border-b">
                                    <td class="py-2 px-4">{{ article.nom }}</td>
                                    <td class="py-2 px-4">{{ article.description }}</td>
                                    <td class="py-2 px-4">{{ article.price }}</td>
                                    <td class="py-2 px-4 flex space-x-2">
                                        <a href="{{ path('article_edit', {id: article.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-1 px-2 rounded text-sm">Modifier</a>
                                        <a href="{{ path('article_delete', {id: article.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-1 px-2 rounded text-sm"
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                                           Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="py-4 text-center">Aucun article trouvé.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
